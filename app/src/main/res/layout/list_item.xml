<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:clickable="true"
    android:id="@+id/cont_item_root">

    <ImageView
        android:id="@+id/im_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
         android:src="@drawable/bishi"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="18dp"
        android:text="text"
        android:id="@+id/lbl_item_text"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/im_item_icon"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lbl_item_text2"
        android:text="test2"
        android:textSize="18dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/lbl_item_text"
        android:layout_marginLeft="25dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="16dp"
        android:text="text3"
        android:id="@+id/lbl_item_text3"
        android:layout_toRightOf="@id/im_item_icon"
        android:layout_marginLeft="35dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text4"
        android:id="@+id/lbl_item_text4"
        android:textSize="18dp"
        android:layout_toRightOf="@+id/im_item_icon"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"

        />

</RelativeLayout>
